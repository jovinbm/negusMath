<script type="text/ng-template" id="views/all/partials/templates/suggested_posts.html">
    <div>
        <div class="panel-heading"><i class="fa fa-leanpub"></i> SUGGESTED POSTS</div>

        <div ng-show="suggestedPosts.length > 0">
            <div ng-repeat="post in suggestedPosts">
                <div class="card">

                    <div class="card-content">

                        <h2 class="text-outputs postHeading"><a ng-href="{{post.postPath}}"
                                                                ng-bind-html="post.postHeading"></a>
                        </h2>

                        <h3 class="text-muted postBy">
                            <small>
                                <a class="btn-link"
                                   ng-bind-html="post.authorName"></a> on
                                <span ng-bind-html="post.postDate"></span>
                            </small>
                            <br/>
                            <small class="text-muted"
                                   ng-bind-html="post.timeAgo">
                            </small>
                        </h3>

                        <div post-summary model="post.postSummary"></div>


                    </div>
                    <div class="card-action clearfix">

                        <div class="pull-right">
                            <a ng-href="{{post.postPath}}"
                               class="btn btn-default btn-sm">Read More</a>
                        </div>

                    </div>
                </div>
                <br/>
            </div>
        </div>

        <div class="alert alert-success"
             ng-show="suggestedPosts.length == 0">
            <strong>We don't any suggestions for you yet...</strong>
        </div>
    </div>
</script>