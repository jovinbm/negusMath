<% if(partial == false) { %>
<% var obj2 = {
    limit: limit,
    pageNumber: pageNumber,
    totalPostResults: postsCount,
    totalPostResultsPages: postsCount / limit
} %>

<div post-stream-scope
     ng-init="model = '<%= JSON.stringify(obj2) %>'">
    <div>
        <div class="panel-heading"><i class="fa fa-leanpub"></i> LATEST POSTS
        </div>

        <div id="appendPreviousPosts"></div>

        <% allPosts.forEach(function(post, index){ %>
        <div class="card">

            <div class="card-content">

                <h2 class="text-outputs postHeading"><a href="<%= post.postPath %>">
                        <%= post.postHeading %>
                    </a>
                </h2>

                <h3 class="text-muted postBy">
                    <small>
                        <a class="btn-link">
                            <%= post.authorName %>
                        </a> on <span>
                            <%= post.postDate %>
                        </span>
                    </small>
                    <br/>
                    <small class="text-muted"
                           data-livestamp="<%= post.createdAt %>">
                    </small>
                </h3>

                <div>
                    <%- post.postSummary %>
                </div>


            </div>
            <div class="card-action clearfix">

                <div class="pull-right">
                    <a href="<%= post.postPath %>"
                       class="btn btn-default btn-sm">Read More</a>
                </div>

            </div>
        </div>
        <br/>
        <% }) %>

        <div id="appendNextPosts"></div>

        <div class="ng-cloak">
            <% if ( totalPostResults > 0 && totalPostResultsPages > 1 && pageNumber < totalPostResultsPages ) { %>

            <div ng-if="theModel2.totalPostResults > 0 && theModel2.totalPostResultsPages > 1 && theModel2.pageNumber < theModel2.totalPostResultsPages">
                <div class="text-center">
                    <button ng-click="showMore()"
                            id="showMoreBtn2"
                            class="btn btn-md btn-block btn-info">Show More
                    </button>

                </div>
            </div>

            <div ng-if="theModel2.totalPostResults > 0 && theModel2.totalPostResultsPages > 0 && theModel2.pageNumber >= theModel2.totalPostResultsPages">
                <div class="alert alert-success">
                    <strong>No more posts to show...</strong>
                </div>
            </div>

            <% } %>

            <% if (totalPostResults > 0 && totalPostResultsPages > 0 && pageNumber == totalPostResultsPages) { %>

            <div>
                <div class="alert alert-success">
                    <strong>No more posts to show...</strong>
                </div>
            </div>

            <% } %>
        </div>

    </div>
</div>

<div>
    <br/>
    <br/>
    <br/>
    <br/>

    <div suggested-posts></div>
</div>

<% } else if(partial == true){ %>

<div id="appendPreviousPosts"></div>

<% allPosts.forEach(function(post, index){ %>

<div class="card">

    <div class="card-content">

        <h2 class="text-outputs postHeading"><a href="<%= post.postPath %>">
                <%= post.postHeading %>
            </a>
        </h2>

        <h3 class="text-muted postBy">
            <small>
                <a class="btn-link">
                    <%= post.authorName %>
                </a> on <span>
                            <%= post.postDate %>
                        </span>
            </small>
            <br/>
            <small class="text-muted"
                   data-livestamp="<%= post.createdAt %>">
            </small>
        </h3>

        <div>
            <%- post.postSummary %>
        </div>


    </div>
    <div class="card-action clearfix">

        <div class="pull-right">
            <a href="<%= post.postPath %>"
               class="btn btn-default btn-sm">Read More</a>
        </div>

    </div>
</div>
<br/>
<% }) %>

<div id="appendNextPosts"></div>

<% } %>
