<script type="text/ng-template" id="views/all/partials/templates/users/banned_users.html">
    <div class="panel panel-default">
        <div>
            <div class="panel-heading">Banned Users
                <div class="input-group">
                    <input type="text"
                           class="form-control"
                           placeholder="Filter banned users"
                           ng-model="bannedUsersModel.filterString">
                    <span class="input-group-addon" id="search-addon">
                        <a href ng-click=""
                           target="_self"><i class="fa fa-search"></i></a>
                    </span>
                </div>
            </div>

            <div class="panel-body">
                <div class="card">
                    <div class="card-content">

                        <div ng-show="bannedUsers.length == 0">
                            <div class="alert alert-success">
                                <strong>No banned users found</strong>
                            </div>
                        </div>

                        <div ng-show="bannedUsers.length > 0">
                            <div class="table-responsive">
                                <table class="table table-striped table-hover table-condensed">
                                    <thead>
                                    <tr>
                                        <th>Name</th>
                                        <th>Actions</th>
                                    </tr>
                                    </thead>
                                    <tbody ng-repeat="user in bannedUsers | filter: bannedUsersModel.filterString | orderBy: 'firstName' track by user.uniqueCuid"
                                           ng-hide="user.uniqueCuid == userData.uniqueCuid"
                                           user-display="user"
                                           user="user">
                                    </tbody>
                                </table>
                            </div>
                        </div>

                    </div>
                </div>

            </div>
        </div>
    </div>
</script>