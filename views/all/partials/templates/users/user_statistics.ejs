<script type="text/ng-template" id="views/all/partials/templates/users/user_statistics.html">
    <div class="panel panel-default">
        <div>
            <div class="panel-heading">User Statistics
            </div>

            <div class="panel-body">
                <div class="card">
                    <div class="card-content">
                        <div class="table-responsive">
                            <table class="table table-striped table-hover table-condensed">
                                <thead>
                                <tr>
                                    <th>Group</th>
                                    <th>Total</th>
                                </tr>
                                </thead>
                                <tbody>
                                <tr>
                                    <td>All Users</td>
                                    <td ng-bind="usersCount.allUsers"></td>
                                </tr>
                                <tr>
                                    <td>Admin Users</td>
                                    <td ng-bind="usersCount.adminUsers"></td>
                                </tr>
                                <tr>
                                    <td>Local Users</td>
                                    <td ng-bind="usersCount.localUsers"></td>
                                </tr>
                                <tr>
                                    <td>Approved Users</td>
                                    <td ng-bind="usersCount.approvedUsers"></td>
                                </tr>
                                <tr>
                                    <td>Users not approved</td>
                                    <td ng-bind="usersCount.usersNotApproved"></td>
                                </tr>
                                <tr>
                                    <td>Banned Users</td>
                                    <td ng-bind="usersCount.bannedUsers"></td>
                                </tr>
                                <tr>
                                    <td>Active users</td>
                                    <td ng-bind="usersCount.usersNotBanned"></td>
                                </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</script>