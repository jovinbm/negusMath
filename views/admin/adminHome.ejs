<div class="ng-cloak">

    <div id="top"></div>

    <div class="container">
        <div ng-class="bannerClass"
             class="col-lg-8"
             ng-if="showBanner">
            <button type="button" class="close" data-dismiss="alert">×</button>
            <strong>{{bannerMessage}}</strong>
        </div>
    </div>

    <section id="newPostSection" ng-show="newPost" class="ng-cloak">
        <div class="container">
            <div class="row">
                <div id="newPost">

                    <div class="panel panel-default">

                        <div class="panel-heading"><i class="fa fa-leanpub"></i> NEW POST <span class="pull-right">{{currentTime}}</span>
                        </div>

                        <div class="panel-body">

                            <div ng-class="newPostBannerClass"
                                 ng-if="showNewPostBanner">
                                <button type="button" class="close" data-dismiss="alert">×</button>
                                <strong>{{newPostBannerMessage}}</strong>
                            </div>

                            <ul class="list-unstyled animated fadeIn">
                                <li class="list-unstyled clearfix">
                                    <div class="card">

                                        <div class="card-content">

                                            <form name="newPostForm">

                                                <div class="padding-bottom-15">

                                                    <!--Heading field-->
                                                    <div class="form-group">
                                                        <label for="postHeading"><strong>Heading</strong></label>
                                                        <input type="text"
                                                               class="form-control"
                                                               id="postHeading"
                                                               placeholder="Enter heading"
                                                               ng-model="newPostModel.postHeading"
                                                               ng-minlength="10"
                                                               required
                                                               ng-disabled="isLoading || universalDisable"
                                                               name="postHeading">

                            <span class="form-error-notice"
                                  ng-show="newPostForm.postHeading.$error.required"
                                  ng-if='newPostForm.postHeading.$dirty'>
                                <small>This is a required field:</small>
                            </span>
                            <span class="form-error-notice"
                                  ng-show="newPostForm.postHeading.$error.minlength"
                                  ng-if='newPostForm.postHeading.$dirty'>
                                <small>Minimum length required is 10:</small>
                            </span>
                                                    </div>

                                                </div>

                                                <div class="form-group">
                                                    <p><strong>Content</strong></p>

                                                    <text-angular
                                                            name="newPostMainContent"
                                                            ng-model="newPostModel.postContent"></text-angular>
                                                </div>

                                                <div class="form-group">

                                                    <div class="form-group">
                                                        <label for="textArea">Post Summary</label>

                                                        <div>
                                                            <textarea class="form-control postSummary"
                                                                      rows="10"
                                                                      name="postSummary"
                                                                      ng-model="newPostModel.postSummary"
                                                                      required
                                                                      ng-maxlength="1600"
                                                                      id="textArea">
                                                            </textarea>
                                                            <span class="form-error-notice"
                                                                  ng-show="newPostForm.postSummary.$error.required"
                                                                  ng-if='newPostForm.postSummary.$dirty'>
                                <small>This is a required field:</small>
                            </span>
                            <span class="form-error-notice"
                                  ng-show="newPostForm.postSummary.$error.maxlength"
                                  ng-if='newPostForm.postSummary.$dirty'>
                                <small>Maximum length required is 1600:</small>
                            </span>
                                                            <span class="help-block">This will represent this post in the list of all posts. Limited to 1600 characters. Users will be able to click a 'read more' link to see the main content of the post</span>
                                                        </div>
                                                    </div>
                                                </div>

                                            </form>

                                        </div>

                                        <div class="card-action clearfix ng-cloak">

                                            <div class="pull-right">
                                                <a class="btn btn-default btn-sm"
                                                   href ng-click="hideNewPost(); goToTop();">Save
                                                    Draft</a>
                                                <a class="btn btn-default btn-sm"
                                                   href ng-click="hideNewPost(); goToTop();">Cancel</a>
                                                <a class="btn btn-default btn-sm"
                                                   href ng-click="submitNewPost(); goToTop();"
                                                   ng-disabled="newPostForm.$invalid">POST</a>
                                            </div>

                                        </div>
                                    </div>
                                </li>

                            </ul>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </section>

    <section>
        <div class="container">
            <div class="col-lg-8 ng-cloak" id="postStream">

                <div ui-view></div>

            </div>


            <div class="col-lg-4 ng-cloak" id="sidebar">
                <div class="panel panel-default">

                    <div class="panel-heading"><i class="fa fa-youtube-play"></i> THIS WEEK'S VIDEO
                    </div>

                    <div class="panel-body">
                        <ul class="list-unstyled animated fadeIn">
                            <li class="list-unstyled clearfix">
                                <div class="card">

                                    <div class="card-content">
                                        <div class="embed-responsive embed-responsive-16by9">
                                            <iframe class="embed-responsive-item"
                                                    src="https://www.youtube.com/embed/adKP2CzKaFM" frameborder="0"
                                                    allowfullscreen></iframe>
                                        </div>
                                    </div>
                                </div>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>

            <div ng-controller="HotController"
                 class="col-lg-4 ng-cloak" id="sidebar"
                 ng-if="hotThisWeek.length != 0">
                <div class="panel panel-default">

                    <div class="panel-heading"><i class="fa fa-fire"></i> HOT THIS WEEK
                    </div>

                    <div class="panel-body">

                        <ul class="list-group">
                            <li class="list-group-item"
                                ng-repeat="hotPost in hotThisWeek">
                                <p class="ng-cloak text-outputs">
                                    <a ng-href="#!/post/{{hotPost.postIndex}}"
                                       ng-click="goToTop()">{{hotPost.postHeading}}
                                    </a> <br/>
                                <h6 class="text-muted">
                                    <small class="ng-cloak"><a class="btn-link">{{hotPost.authorName}}</a>
                                        on
                                        {{hotPost.postDate}}
                                    </small>
                                    <br/>
                                    <small class="text-muted ng-cloak">
                                        {{hotPost.theTimeAgo}}
                                    </small>
                                </h6>
                                </p>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>

        </div>
    </section>


    <section id="contact">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <h2 class="section-heading">Contact Us</h2>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12">
                    <form id="contactForm"
                          name="contactForm">
                        <div class="row">
                            <div class="container text-center">
                                <div class="col-lg-12 text-center">

                                    <div class="form-group">
                                        <input type="text"
                                               class="form-control"
                                               placeholder="Your Name *"
                                               ng-model="contactUsModel.name"
                                               ng-minlength="4"
                                               ng-maxlength="30"
                                               required
                                               ng-disabled="isLoading || universalDisable"
                                               name="name">
                                        <span class="form-error-notice"
                                              ng-show="contactForm.name.$error.required"
                                              ng-if='contactForm.name.$dirty'><small>This is a
                                                required field:
                                            </small>
                                        </span>
                                        <span class="form-error-notice"
                                              ng-show="contactForm.name.$error.minlength"
                                              ng-if='contactForm.name.$dirty'><small>Minimum
                                                length required is 2:
                                            </small>
                                        </span>
                                        <span class="form-error-notice"
                                              ng-show="contactForm.name.$error.maxlength"
                                              ng-if='contactForm.name.$dirty'><small>Maximum
                                                length required is 30:
                                            </small>
                                        </span>
                                    </div>

                                    <div class="form-group">
                                        <input type="email"
                                               class="form-control"
                                               placeholder="Your Email *"
                                               ng-model="contactUsModel.email"
                                               ng-pattern="/^([\w-]+(?:\.[\w-]+)*)@((?:[\w-]+\.)*\w[\w-]{0,66})\.([a-z]{2,6}(?:\.[a-z]{2})?)$/i"
                                               required
                                               ng-disabled="isLoading || universalDisable"
                                               name="email">
                                        <span class="form-error-notice"
                                              ng-show="contactForm.email.$error.required"
                                              ng-if='contactForm.email.$dirty'><small>This is a
                                                required field:
                                            </small>
                                        </span>
                                        <span class="form-error-notice"
                                              ng-show="contactForm.email.$error.pattern"
                                              ng-if='contactForm.email.$dirty'><small>This is not a valid email:
                                            </small>
                                        </span>
                                    </div>

                                    <div class="form-group">
                                        <textarea class="form-control"
                                                  placeholder="Your Message *"
                                                  ng-model="contactUsModel.message"
                                                  ng-required
                                                  ng-disabled="isLoading || universalDisable"
                                                  name="message">
                                            <span class="form-error-notice"
                                                  ng-show="contactForm.message.$error.required"
                                                  ng-if='contactForm.message.$dirty'><small>This is a
                                                    required field:
                                                </small>
                                            </span>
                                        </textarea>
                                    </div>

                                </div>
                            </div>
                            <div class="col-lg-12 text-center">
                                <!--<button class="btn btn-xl"-->
                                <!--ng-disabled="contactForm.$invalid"-->
                                <!--ng-click="sendContactUs()">Send Message-->
                                <!--</button>-->
                                <button class="btn btn-xl"
                                        ng-click="sendContactUs()">Send Message
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </section>


    <footer>
        <div class="container">
            <div class="row">
                <div class="col-md-12 clearfix text-center">
                    <span class="copyright pull-left">Copyright &copy; 2015 NegusMath Inc</span>
                    <ul class="list-inline quicklinks pull-right">
