    <section id="newPostSection" ng-show="newPost" class="ng-cloak">
        <div class="container">
            <div class="row">
                <div id="newPost">

                    <div class="panel panel-default">

                        <div class="panel-heading"><i class="fa fa-leanpub"></i> NEW POST <span class="pull-right">{{currentTime}}</span>
                        </div>

                        <div class="panel-body">

                            <div ng-class="newPostBannerClass"
                                 ng-if="showNewPostBanner">
                                <button type="button" class="close" data-dismiss="alert">×</button>
                                <strong>{{newPostBannerMessage}}</strong>
                            </div>

                            <ul class="list-unstyled animated fadeIn">
                                <li class="list-unstyled clearfix">
                                    <div class="card">

                                        <div class="card-content">

                                            <form name="newPostForm">

                                                <div class="padding-bottom-15">

                                                    <!--Heading field-->
                                                    <div class="form-group">
                                                        <label for="postHeading"><strong>Heading</strong><span
                                                                    class="required-star">*</span></label>
                                                        <input type="text"
                                                               class="form-control"
                                                               id="postHeading"
                                                               placeholder="Enter heading"
                                                               ng-model="newPostModel.postHeading"
                                                               ng-minlength="10"
                                                               required
                                                               ng-disabled="isLoading || universalDisable"
                                                               name="postHeading">

                            <span class="form-error-notice"
                                  ng-show="newPostForm.postHeading.$error.required"
                                  ng-if='newPostForm.postHeading.$dirty'>
                                <small>This is a required field:</small>
                            </span>
                            <span class="form-error-notice"
                                  ng-show="newPostForm.postHeading.$error.minlength"
                                  ng-if='newPostForm.postHeading.$dirty'>
                                <small>Minimum length required is 10:</small>
                            </span>
                                                    </div>

                                                </div>

                                                <div class="form-group">
                                                    <p><strong>Content</strong><span class="required-star">*</span></p>

                                                    <text-angular
                                                            name="newPostMainContent"
                                                            ng-model="newPostModel.postContent"></text-angular>
                                                </div>

                                                <div class="form-group">
                                                    <p><strong>Post Summary</strong><span class="required-star">*</span>
                                                    </p>

                                                    <text-angular
                                                            name="newPostSummary"
                                                            ng-model="newPostModel.postSummary">
                                                    </text-angular>

                                                    <span class="form-error-notice"
                                                          ng-show="checkIfPostSummaryIsEmpty()">
                                                <small>This is a required field:</small>
                                                </span>

                                                <span class="form-error-notice"
                                                      ng-show="checkPostSummaryMaxLength(2000)">
                                                <small>Maximum html length required is 2000:</small>
                                                </span>
                                                    <br/>
                                                    <small class="form-help-notice">The post summary represents the post
                                                        in the list
                                                        of all posts. Limited to 2000 characters. Users will be able to
                                                        click a 'read more' link to see the main content of the post
                                                    </small>
                                                </div>

                                                <div class="form-group">
                                                    <p><strong>Tags</strong></p>

                                                    <tags-input name="newPostTags"
                                                                ng-model="newPostModel.postTags"
                                                                placeholder="Add tags"
                                                                min-length="3"
                                                                max-length="30"
                                                                max-tags="5">
                                                        <!--<auto-complete source="loadTags($query)"></auto-complete>-->
                                                    </tags-input>
                                                    <small class="form-help-notice">Enter up to ten tags</small>

                                                </div>

                                            </form>

                                        </div>

                                        <div class="card-action clearfix ng-cloak">

                                            <div class="pull-right">
                                                <a class="btn btn-default btn-sm"
                                                   href ng-click="hideNewPost(); goToTop();">Save
                                                    Draft</a>
                                                <a class="btn btn-default btn-sm"
                                                   href ng-click="hideNewPost(); goToTop();">Cancel</a>
                                                <a class="btn btn-default btn-sm"
                                                   href ng-click="submitNewPost(); goToTop();"
                                                   ng-disabled="newPostForm.$invalid || postSummaryIsEmpty || postSummaryHasExceededMaximum">POST</a>
                                            </div>

                                        </div>
                                    </div>
                                </li>

                            </ul>
                        </div>
                    </div>

                </div>
